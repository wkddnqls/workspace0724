<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">





<mapper namespace="SwordMapper">


<resultMap  id = "SwordCollection" type="Sword">
 
  <result column = "SWORD_NAME" property = "swordName"/>
  <result column = "SWORD_NUM" property = "swordNum"/>
  <result column = "SWORD_INITIAL" property = "swordInitial"/>
  <result column = "SWORD_DATE" property = "swordDate"/>
  <result column = "SWORD_USE" property = "swordUse"/>
  
</resultMap>
  
  <select id= "selectSwordAll" resultMap ="SwordCollection" >
     
  SELECT SWORD_NAME,
         SWORD_NUM,
         SWORD_INITIAL,
         SWORD_DATE,
         SWORD_USE
         FROM SWORD
          ORDER BY SWORD_DATE ASC

  </select>
  
  <select id= "selectAllSwordCount" resultType ="_int" >
     
     
     
      SELECT COUNT(*) AS COUNT
		FROM SWORD
	

  </select>
  
  
  
</mapper>